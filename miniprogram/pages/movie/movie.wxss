.movie{
  height: 300rpx;
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}
.movie-img{
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
}
.movie-info{
  flex: 4;
}
.movie-info__title{
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
}
.movie-info__score{
  color: #faaf00;
}
.movie-comment{
  height: 60rpx;
  line-height: 60rpx;
  background-color: #E54847;
  color: #fff;
  margin: 120rpx 0 0 0;
  flex: 1;
}